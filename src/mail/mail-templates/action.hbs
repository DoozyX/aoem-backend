<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <style>
      body {
        margin: 0;
        font-family: 'Arial', sans-serif;
        font-size: 16px;
        line-height: 1.5;
        color: #333;
      }
      table {
        border: 0;
        width: 100%;
        max-width: 600px;
        margin: auto;
      }
      td {
        padding: 20px;
      }
      .header {
        background-color: #00aaaa;
        color: #fff;
        text-align: center;
        font-size: 24px;
        font-weight: bold;
      }
      .content {
        color: #333;
        font-size: 16px;
        font-weight: normal;
      }
      .button {
        display: inline-block;
        padding: 10px 20px;
        background-color: #00aaaa;
        text-decoration: none;
        color: #ffffff;
        border-radius: 5px;
        transition: background-color 0.3s ease;
      }
      .button:hover {
        background: #006f7f;
      }

      .footer {
        font-size: 14px;
        text-align: center;
        color: #999;
        padding: 20px;
        border-top: 1px solid #ddd;
      }

      @media (max-width: 600px) {
        .header,
        .content,
        .footer {
          padding: 15px;
        }
        
        .header {
          font-size: 20px;
        }
        .content,
        .footer {
          font-size: 14px;
        }
      }
    </style>
  </head>

  <body>
    <table>
      <tr class="header">
        <td>{{app_name}}</td>
      </tr>
      <tr class="content">
        <td>
          {{text1}}<br />
          {{text2}}<br />
          {{text3}}
        </td>
      </tr>
      <tr>
        <td style="text-align: center">
          <a href="{{url}}" class="button">{{actionTitle}}</a>
        </td>
      </tr>
      <tr>
        <td class="footer">Â© {{year}} {{app_name}}. All rights reserved.</td>
      </tr>
    </table>
  </body>
</html>
