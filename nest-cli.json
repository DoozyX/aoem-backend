{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      { "include": "i18n/**/*", "watchAssets": true },
      { "include": "permits/template/*.docx", "watchAssets": true },
      {
        "include": "reports/template/annual-report-template.xlsx",
        "watchAssets": true
      }
    ],
    "plugins": ["@nestjs/swagger"]
  }
}
